<div class="well">
  <h1>Tous les Cocktails</h1>
</div>

<table class="table">
  <thead>
    <tr>
      <th>Nom</th>
      <th>Description</th>
    </tr>
  </thead>
  <tbody>
    <% @cocktails.each do |cocktail| %>
    <tr>
      <td><%= link_to cocktail.name, cocktail_path(cocktail)%> </td>
      <td><%= cocktail.description %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Add a new Cocktail', new_cocktail_path, class: "btn btn-primary" %>